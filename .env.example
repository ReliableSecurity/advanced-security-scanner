# Advanced Security Scanner - Environment Variables
# Copy this file to .env and configure your settings

# =============================================================================
# CORE SCANNER SETTINGS
# =============================================================================

# Secret key for encryption and sessions (CHANGE THIS!)
SECRET_KEY=your-super-secret-key-change-this-immediately

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum concurrent scans
MAX_CONCURRENT_SCANS=5

# Enable/disable notifications
ENABLE_NOTIFICATIONS=true

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# PostgreSQL database settings (optional)
POSTGRES_DB=scanner
POSTGRES_USER=scanner
POSTGRES_PASSWORD=secure_password_123

# Redis cache settings (optional)
REDIS_PASSWORD=scanner_redis_pass_123

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=1234567890:ABCDEFghijklmnopQRSTUVwxyz
TELEGRAM_CHAT_ID=-1001234567890

# Slack Webhook Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=security-scanner@company.com
EMAIL_TO=admin@company.com,security-team@company.com

# =============================================================================
# API SETTINGS
# =============================================================================

# API Host and Port
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,your-domain.com

# =============================================================================
# SECURITY TOOL SETTINGS
# =============================================================================

# Tool rate limiting
NMAP_RATE_LIMIT=300
NUCLEI_RATE_LIMIT=150
SQLMAP_THREADS=4

# External API Keys (for vulnerability enrichment)
NVD_API_KEY=your-nvd-api-key-here
VIRUSTOTAL_API_KEY=your-virustotal-api-key-here
SHODAN_API_KEY=your-shodan-api-key-here

# =============================================================================
# NETWORK SETTINGS
# =============================================================================

# Proxy settings (if needed)
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# DNS servers
DNS_SERVERS=8.8.8.8,8.8.4.4,1.1.1.1

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Memory limits (in MB)
MAX_MEMORY_USAGE=2048

# Concurrent tool execution
MAX_TOOL_PROCESSES=10

# Report generation settings
MAX_REPORT_SIZE_MB=100
REPORT_RETENTION_DAYS=30

# =============================================================================
# DEVELOPMENT SETTINGS (for testing only)
# =============================================================================

# Debug mode (NEVER enable in production)
DEBUG=false

# Skip SSL verification (for testing only)
SKIP_SSL_VERIFY=false

# Test mode
TEST_MODE=false

# Mock external APIs (for testing)
MOCK_EXTERNAL_APIS=false

# =============================================================================
# DOCKER-SPECIFIC SETTINGS
# =============================================================================

# Container timezone
TZ=UTC

# User and group IDs (match your host system)
PUID=1000
PGID=1000

# Container restart policy
RESTART_POLICY=unless-stopped